<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/stylesheets/output.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
    <style> .font-orbitron { font-family: 'Orbitron', sans-serif; } </style>
</head>
<body class="bg-slate-900 text-gray-300">
    <div class="fixed inset-0 z-[-1] bg-gradient-to-br from-gray-900 via-[#100f24] to-indigo-900"></div>
    <main class="min-h-screen flex flex-col items-center justify-center text-center p-4">
        <div class="max-w-2xl w-full">
            <h1 class="font-orbitron text-4xl md:text-5xl font-black text-white">Waiting for Team</h1>
            <p class="mt-4 text-lg text-indigo-300">Your mission will begin once all delegates are ready.</p>
            
            <!-- Loading Spinner -->
            <div class="mt-8 flex justify-center items-center">
                <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-indigo-400"></div>
            </div>

            <!-- Team Status -->
            <div id="team-status-container" class="mt-8 bg-slate-800/50 border border-indigo-500/30 rounded-lg p-6 max-w-sm mx-auto">
                <h2 class="font-orbitron text-lg font-bold text-white mb-4">Team Status (<span id="ready-count">0</span>/3 Ready)</h2>
                <ul id="delegate-list" class="space-y-2 text-left">
                    <!-- Status will be populated by JavaScript -->
                </ul>
            </div>
        </div>
    </main>

<script>
    const teamId = '<%= user.teamId %>';
    const delegateId = '<%= user.delegateId %>';
    const userRole = '<%= user.role %>';
    const socket = io();

    // Join the team room immediately
    socket.emit('join-team-room', { teamId, delegateId });

    // Listen for status updates from the server
    socket.on('team-status-update', (readyStates) => {
        console.log('Received team status:', readyStates); // Debug log
        
        const delegateList = document.getElementById('delegate-list');
        const readyCountEl = document.getElementById('ready-count');
        delegateList.innerHTML = ''; // Clear the list
        
        // Get the ready players
        const readyPlayers = Object.keys(readyStates || {});
        readyCountEl.textContent = readyPlayers.length;

        // Get all team delegates from the database
        const team = JSON.parse('<%= JSON.stringify(user.team) %>');
        team.delegates.forEach(delegate => {
            const li = document.createElement('li');
            const isReady = readyStates && readyStates[delegate.delegateId];
            
            li.className = `flex items-center ${isReady ? 'text-green-400' : 'text-gray-400'}`;
            if (isReady) {
                li.innerHTML = `
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg> 
                    ${delegate.delegateId} (${delegate.role}) - Ready
                `;
            } else {
                li.innerHTML = `
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    ${delegate.delegateId} (${delegate.role}) - Waiting...
                `;
            }
            delegateList.appendChild(li);
        });
    });

    socket.on('start-mission', () => {
        console.log('Received start-mission event'); // Debug log
        let roleUrl = '/';
        if (userRole === 'cyber') roleUrl = '/role/cyber';
        if (userRole === 'eng') roleUrl = '/role/eng';
        if (userRole === 'opera') roleUrl = '/role/opera';
        window.location.href = roleUrl;
    });

    // Handle any errors
    socket.on('error', (error) => {
        console.error('Socket error:', error);
    });
</script>
</body>
</html>
