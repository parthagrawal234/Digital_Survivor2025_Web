<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/stylesheets/output.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .font-orbitron { font-family: 'Orbitron', sans-serif; }
    </style>
</head>
<body class="bg-slate-900 text-gray-300 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <header class="flex flex-col md:flex-row justify-between items-center mb-8 pb-4 border-b border-slate-700 gap-4">
            <h1 class="font-orbitron text-3xl font-bold text-white">Admin Dashboard</h1>
            <div class="flex items-center gap-4">
                <button id="start-round3-btn" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg" <%= isRound3Live ? 'disabled' : '' %>>
                    <%= isRound3Live ? 'Round 3 is LIVE' : 'Start Round 3 for ALL' %>
                </button>
                <a href="/admin/logout" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg">Logout</a>
            </div>
        </header>

        <div class="bg-slate-800/50 border border-indigo-500/30 rounded-lg shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-700">
                    <thead class="bg-slate-800">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Rank</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Team ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Delegates & Progress</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Final Score</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Total Time</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-indigo-300 uppercase tracking-wider">Final Challenge Time</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% if (teams.length > 0) { %>
                            <% teams.forEach((team, index) => { %>
                                <%
                                    let totalTimeDisplay = "N/A";
                                    if (team.round2StartTime && team.round3EndTime) {
                                        const diffMs = new Date(team.round3EndTime) - new Date(team.round2StartTime);
                                        const diffSecs = Math.floor(diffMs / 1000);
                                        const minutes = Math.floor(diffSecs / 60);
                                        const seconds = diffSecs % 60;
                                        totalTimeDisplay = `${minutes}m ${seconds < 10 ? '0' : ''}${seconds}s`;
                                    } else if (team.round2StartTime) {
                                        totalTimeDisplay = "In Progress";
                                    }
                                %>
                                <tr class="bg-slate-800/60 even:bg-slate-800/40">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white"><%= index + 1 %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white"><%= team.teamId %></td>
                                    <td class="px-6 py-4 text-sm text-gray-300">
                                        <div class="space-y-2">
                                            <% team.delegates.forEach(delegate => { %>
                                                <div>
                                                    <strong><%= delegate.delegateId %></strong> (<%= delegate.role %>)
                                                    <div class="text-xs text-gray-400">
                                                        <span class="font-medium text-indigo-400"><%= delegate.points %> pts</span> /
                                                        <span>Hints: <%= delegate.hintsUsed %></span>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-lg text-green-400"><%= team.totalScore %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-cyan-400"><%= totalTimeDisplay %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= team.round3TimeSpent > 0 ? `${team.round3TimeSpent}s` : 'N/A' %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-10 text-gray-400">No teams have registered yet.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<script>
    document.getElementById('start-round3-btn').addEventListener('click', async (e) => {
        const btn = e.target;
        btn.disabled = true;
        btn.textContent = 'Starting...';
        try {
            const response = await fetch('/api/admin/start-round3-global', { method: 'POST' });
            const data = await response.json();
            if (response.ok) {
                btn.textContent = 'Round 3 is LIVE';
                alert(data.message);
            } else {
                alert('Error: ' + data.message);
                btn.disabled = false;
                btn.textContent = 'Start Round 3 for ALL';
            }
        } catch (error) {
            alert('A network error occurred.');
            btn.disabled = false;
            btn.textContent = 'Start Round 3 for ALL';
        }
    });
</script>
</body>
</html>

